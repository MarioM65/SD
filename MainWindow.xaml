<Window x:Class="sd.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema de Acesso" Height="400" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Porta COM:"/>
            <TextBox x:Name="TxtPorta" Text="COM3" Margin="0,0,0,10"/>

            <TextBlock Text="Velocidade (baud rate):"/>
            <TextBox x:Name="TxtVelocidade" Text="9600" Margin="0,0,0,10"/>

            <Button Content="Conectar" Click="BtnConectar_Click" Height="30" Margin="0,0,0,20"/>

            <TextBlock Text="Senha:"/>
            <PasswordBox x:Name="SenhaBox" Margin="0,0,0,10"/>

            <Button Content="Entrar" Height="30" Click="BtnEntrar_Click"/>

            <TextBlock x:Name="StatusText" Margin="0,20,0,0" Foreground="Red" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
